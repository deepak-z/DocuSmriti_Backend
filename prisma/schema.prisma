// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id                    Int       @id @default(autoincrement())
  email                 String    @unique
  kyc_status            String    @default("not_verified")
  is_active             Boolean   @default(true)
  created_at            DateTime  @default(now())
  updated_at            DateTime  @updatedAt
  kyc_info              kyc_info?
  vendor_call_tracking  vendor_call_tracking?
}

model kyc_info {
  id                 Int      @id @default(autoincrement())
  user               users    @relation(fields: [user_id], references: [id])
  user_id            Int      @unique
  first_name         String   @default("")
  last_name          String   @default("")
  dob                String   @default("")
  status             String   @default("")
  gender             String   @default("")
  aadhaar_number     String   @default("")
  selfie_match_score Int      @default(0)
  rejection_reason   String   @default("")
  selfie_path        String   @default("")
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
}

model vendors {
  id                    Int      @id @default(autoincrement())
  name                  String   @default("")
  country_id            Int      @default(0)
  is_active             Boolean  @default(true)
  notes                 String   @default("")
  created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt
  vendor_call_tracking  vendor_call_tracking?
}

model vendor_call_tracking {
  id                 Int       @id @default(autoincrement())
  vendor             vendors   @relation(fields: [vendor_id], references: [id])
  vendor_id          Int       @unique
  api_endpoint       String    @default("")
  request_type       String    @default("")
  request_params     String    @default("")
  response_data      String    @default("")
  status_code        Int       @default(0)
  user               users     @relation(fields: [user_id], references: [id])
  user_id            Int       @unique
  created_at         DateTime  @default(now())
}
